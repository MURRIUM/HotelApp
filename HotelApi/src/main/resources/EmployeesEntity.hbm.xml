<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="api.Entity.EmployeesEntity" table="employees" schema="hotel">
        <id name="idEmployee">
            <column name="id_employee" sql-type="int(11)"/>
        </id>
        <property name="surname">
            <column name="Surname" sql-type="varchar(255)"/>
        </property>
        <property name="firstName">
            <column name="First_name" sql-type="varchar(255)"/>
        </property>
        <property name="secondName">
            <column name="Second_name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="sex">
            <column name="Sex" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="position">
            <column name="Position" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="salary">
            <column name="Salary" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="login">
            <column name="Login" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="password">
            <column name="Password" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>